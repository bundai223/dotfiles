#.zshenv

BREW_PATH=`/usr/local/bin/brew --prefix`

# for FBX path setting
FBXSDK_ROOT=/Applications/Autodesk/FBX\ SDK/2013.3/

# path setting
export EDITOR=/Applications/MacVim.app/Contents/MacOS/Vim

# for android path setting
export ANDROID_HOME=${BREW_PATH}/opt/android-sdk
export GRADLE_HOME=${BREW_PATH}/opt/gradle
export ECLIPSE_HOME=/Applications/eclipse
export JAVA_OPTS='-Dgroovy.source.encoding=UTF-8 -Dfile.encoding=UTF-8'
export JAVA_HOME=`/System/Library/Frameworks/JavaVM.framework/Versions/A/Commands/java_home -v "1.6"`

# for homebrew
PATH=$HOME/.nodebrew/current/bin:$PATH
PATH=${BREW_PATH}/bin:$PATH
PATH=~/.cabal/bin:$PATH
#for android
PATH=${ANDROID_HOME}/tools/:$PATH
#for ruby
PATH=${BREW_PATH}/opt/ruby/bin:$PATH

export GOROOT=${BREW_PATH}/opt/go/libexec
export GOPATH=~/go
## go lang
if [ "$GOROOT" != "" ]; then
    PATH=$GOROOT/bin:$GOPATH/bin:$PATH
fi

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"


export PATH

