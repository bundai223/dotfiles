#!/bin/bash

set -eu

usage()
{
  echo 'USAGE:'
  echo '  bin/generate_cookbook cookbook names'
}

mk_cookbook()
{
  cookbook=cookbooks/$1
  dependency=$cookbook/dependency.rb
  entrypoint=$cookbook/default.rb

  test -e $cookbook || mkdir -p $cookbook
  test -e $dependency || touch $dependency
  test -e $entrypoint || cat <<EOF > $entrypoint
include_recipe 'dependency.rb'

case node[:platform]
when 'arch'
when 'osx', 'darwin'
when 'fedora', 'redhat', 'amazon'
when 'debian', 'ubuntu', 'mint'
when 'opensuse'
else
end

EOF
}

if [ $# -eq 0 ]; then
  usage
  exit 1
fi

for arg in $@
do
  mk_cookbook ${arg}
done

