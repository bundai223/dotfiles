
#----------------------------------------
# 短縮コマンド
#----------------------------------------

# reload vimshrc
alias reload = 'vimsh ~/github/dotfiles/.vimshrc'
alias rl = reload

# file open
alias edit = 'vim --split=tabedit $$args'
alias e = edit

# other
alias ls = 'ls -a'
alias lsl = 'ls -la'
alias cl = clear
alias op = 'open .'

