# profiling
# .zshrcの一番始めに記載すること
if [ "$ZSHRC_PROFILE" != "" ]; then
  zmodload zsh/zprof && zprof > /dev/null
fi

source ~/repos/github.com/bundai223/dotfiles/config/.zshenv
<% if node[:platform] == 'osx' or node[:platform] == 'darwin' -%>
source ~/repos/github.com/bundai223/dotfiles/config/zsh/.zshenv_osx
<% else -%>
source ~/repos/github.com/bundai223/dotfiles/config/zsh/.zshenv_unix
  <%- if node[:is_wsl] -%>
source ~/repos/github.com/bundai223/dotfiles/config/zsh/.zshenv_wsl
  <%- end -%>
<% end -%>

