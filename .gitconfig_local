[mergetool "mymvimdiff"]
	cmd = /Applications/MacVim.app/Contents/MacOS/mvim -f -d -c 'wincmd J' \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool "myvimdiff"]
	cmd = /Applications/MacVim.app/Contents/MacOS/Vim -f -d -c 'wincmd J' \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

